mixin multi-col-slider(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''
  - spec.data = spec.data || ''

  div.multi-col-slider(class=spec.__class)
    .row
      - each col in spec.data
        .small-12.medium-4.column
          .swiper-container
            ul.list.swiper-wrapper
              - each item in col.col
                li.list__item.swiper-slide
                  img.list__item__img(src=baseUrl + item.image)
                  if item.name
                    p.meta.list__item__text #{item.name}
